{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Even",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "ESNext",
    "importHelpers": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ESNext",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
